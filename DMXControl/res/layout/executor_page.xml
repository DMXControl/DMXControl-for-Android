<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <de.dmxcontrol.widget.ExecuterPageSliderView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/horizontalScrollView"
        android:scrollbarThumbHorizontal="@drawable/scrollbar_horizontal_style"
        android:layout_gravity="center">

        <de.dmxcontrol.widget.ExecuterPageMultitouchLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/executor_collection"
            android:layout_gravity="left|center_vertical">

        </de.dmxcontrol.widget.ExecuterPageMultitouchLayout>
    </de.dmxcontrol.widget.ExecuterPageSliderView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/executorPageName"
        android:layout_gravity="center_horizontal|bottom"
        android:singleLine="true"
        android:text="@string/executorpage_empty"/>

    <Button
        android:layout_width="43dp"
        android:layout_height="16dp"
        android:text="˅"
        android:id="@+id/executorPageDown_btn"
        android:layout_gravity="left|bottom"
        android:background="#00000000"
        android:textColor="@color/white_smoke"
        android:singleLine="true"/>

    <Button
        android:layout_width="43dp"
        android:layout_height="16dp"
        android:text="˄"
        android:id="@+id/executorPageUp_btn"
        android:layout_gravity="right|bottom"
        android:background="#00000000"
        android:textColor="@color/white_smoke"
        android:singleLine="false"
        android:clickable="false"/>

</FrameLayout>